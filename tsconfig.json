{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "typings",
		"dist"
    ],
    "filesGlob": [
        "./src/**/*.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}