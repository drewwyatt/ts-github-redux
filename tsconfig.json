{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "bin",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "typings",
        "bin"
    ],
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}